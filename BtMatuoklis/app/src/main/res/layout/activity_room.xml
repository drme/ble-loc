<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RoomActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textSingleRoom_Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/roomactivity_text_name"
        android:layout_alignParentEnd="true" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listSingleRoom_BeaconsList"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textSingleRoom_Name"
        android:layout_above="@+id/buttonSingleRoom_Calibrate"
        tools:listitem="@android:layout/simple_expandable_list_item_1"
        android:choiceMode="multipleChoiceModal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roomactivity_button_calibrate"
        android:id="@+id/buttonSingleRoom_Calibrate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onCalibrateButtonClick" />
</RelativeLayout>
